      </div>

    </nav>

    <div id="main-container">
  <%  for(var i=questions.length-1;i>=0;i--){ %>
        <div class="panel panel-default" id=<%=questions[i]._id%>>
          <div class="panel-body" ><%= questions[i].question %></div>
          <div class="panel-footer">
            <% for(var j=0;j<questions[i].options.length;j++){ %>
              <input type="radio" name="optionSelected"> <%= questions[i].options[j].option %></input><br>
            <% } %>
            <button type="button" class="btn btn-success" style="margin-top:10px;">Vote</button>
        </div>
        </div>
      <%  } %>

      <% if(questions.length===0){ %>
        <p style='text-align:center;color:green;font-size:30px;padding-top:200px'>Congratulations...You have voted all polls...Check Result Section...</p>
        <% } %>
  </div>
</div>

