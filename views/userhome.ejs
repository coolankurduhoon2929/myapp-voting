    <style>
      body{
        background: #D3D3D3;
        color:purple;
            }
      #details{
        font-size: 30px;
        text-align: center;
        letter-spacing: 0.6rem;
        padding-top: 30px;
      }
      #logoutlink:hover{
        color:red;
      }
      .row{
        margin-top: 90px;
      }
      .container{
        width: 90%;
      }
      .img-rounded{
        width: 200px;
      }
      #main-container{
        padding-top: 80px;
      }
      .panel-default{
        margin-bottom: 20px;
