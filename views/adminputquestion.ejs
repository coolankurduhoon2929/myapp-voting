        <div class="container">
          <form action="/submitquestion" method="post">
            <div class="row">
              <h1>Put a Question</h1>
            </div>
            <div class="row">
              <div class="col-xs-12 form-group"><label for="111">Question:</label><input id="111" type="text" name="question" class="form-control" placeholder="Question" required autofocus></div>
            </div>
            <div class="row">
              <div class="col-xs-12 form-group">
              <label for="112">No. of Options:</label>
              <select id="112" class="form-control" name="noofoptions" placeholder="No. of Questions" required>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
            </select>
          </div>
        </div>
        <div class="row" id="optionslist">
            <div class="col-xs-12"><input type="text" name="option1" class="form-control" placeholder="option1" required></div>
              <div class="col-xs-12"><input type="text" name="option2" class="form-control" placeholder="option2" required></div>
        </div>
            <div class="row">
              <div class="col-xs-12 form-group">
                <label for="113">Category:</label>
                <select id="113" class="form-control" name="category" placeholder="Category" required>
                <option>Education</option>
                <option>Entertainment</option>
                <option>Policy</option>
                <option>Politics</option>
                <option>Sports</option>
                <option>Other</option>
            </select>
          </div>
            </div>
            <div class="row">
              <div class="col-xs-12 form-group">
                <label for="114">Question End Date:</label>
