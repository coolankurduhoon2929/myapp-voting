    if ( historyTraversal ) {
      // Handle page restore.
      window.location.reload(true);
    }
    });
    </script>


    <style type="text/css">
      body{
        background: url(http://byrnewoodfinishes.com/wp-content/uploads/2015/07/dark-rustic-wood-background-viewing-gallery-o2lfau2r.jpg);
        background-repeat: no-repeat;
        background-size: cover;
      }
      h1{
        color: #2b2b2b;
        background-color: #ff3300;
        border-color: black;
        border-width: medium;
        border-style: solid;
        margin:0 auto;
        width: 40%;
        text-align: center;

      }
      form{
        align-self: center;
        width: 400px;
        margin:0 auto;
        display: flex;
